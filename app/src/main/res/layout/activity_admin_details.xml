<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Edit Product"
        android:textAlignment="center"
        android:textColor="#006400"
        android:textSize="24sp"
        tools:textStyle="bold" />

    <ImageView
        android:id="@+id/editProductPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@drawable/addimage" />

    <EditText
        android:id="@+id/inpProductName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/inpProductPrice"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="99.00"
        android:inputType="textPersonName"
        android:numeric="decimal"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/inpProductDescription"
        android:layout_width="335dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/inpProductQuantity"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="99"
        android:inputType="textPersonName"
        android:numeric="integer"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editProductPhoto"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/editProductPhoto"
        android:text="Product Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toTopOf="@+id/editProductPhoto"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProductPhoto"
        android:layout_alignStart="@+id/editProductPhoto"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Product Price(â‚±)"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toTopOf="@+id/editProductPhoto"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inpProductPrice"
        android:layout_alignStart="@+id/inpProductPrice"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="Product Description"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toTopOf="@+id/editProductPhoto"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView21"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView21"
        android:text="Product Quantity"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editProductPhoto"
        app:layout_constraintStart_toEndOf="@+id/editProductPhoto"
        app:layout_constraintTop_toTopOf="@+id/editProductPhoto"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/editProductDbBTN"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_below="@+id/inpProductDescription"
        android:layout_alignStart="@+id/inpProductDescription"
        android:layout_alignEnd="@+id/inpProductDescription"
        android:layout_marginStart="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/green_button"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Confirm"
        android:textAlignment="center"
        android:textColor="#EFE7E7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/productPic"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/productPic"
        app:layout_constraintTop_toBottomOf="@+id/productPic" />

    <TextView
        android:id="@+id/deleteProductDbBTN"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_below="@+id/inpProductDescription"
        android:layout_alignStart="@+id/inpProductDescription"
        android:layout_alignEnd="@+id/inpProductDescription"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="171dp"
        android:background="@drawable/red_button"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Delete"
        android:textAlignment="center"
        android:textColor="#EFE7E7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/productPic"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/productPic"
        app:layout_constraintTop_toBottomOf="@+id/productPic" />
</RelativeLayout>