<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ChangeEmailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MenuStyle"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change username"
        android:textSize="26dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_default_profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter account credentials"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/email"
        android:layout_width="270dp"
        android:padding="8dp"
        android:background="@drawable/edit_text_border"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Current email address"
        android:inputType="textEmailAddress"/>

    <EditText
        android:padding="8dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="10dp"
        android:id="@+id/logpass"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new username"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:padding="8dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="30dp"
        android:id="@+id/nUser"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Username"/>

    <Button
        android:id="@+id/changeUser"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:text="Proceed"
        android:textSize="15dp" />

</LinearLayout>